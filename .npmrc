# pnpm configuration for Oli Tag Frontend

# Enable strict peer dependencies
strict-peer-dependencies=false

# Use shamefully hoist for compatibility with Next.js
shamefully-hoist=false

# Auto install peer dependencies
auto-install-peers=true

# Lock file strategy
lockfile=true

# Registry
registry=https://registry.npmjs.org/

# Save exact versions
save-exact=false

# Engine strict
engine-strict=true